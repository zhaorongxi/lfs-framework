<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bc.interfaces.dao.AgentWalletDao">
	<!--代理商信息 -->
	<resultMap type="com.bc.interfaces.model.AgtWallet" id="agtWalletMap">
		<id property="id" column="id" />
		<result property="agtPhone" column="agt_phone" />
		<result property="credit" column="credit" />
		<result property="freeze" column="freeze" />
		<result property="profit" column="profit" />
		<result property="sxCredit" column="sx_credit" />
		<result property="lastTime" column="last_time" />

	</resultMap>

	<update id="addAgentWallet" parameterType="com.bc.interfaces.model.AgtWallet">
		update bc_agt_wallet set credit = credit + #{credit},last_time = now() where agt_phone = #{agtPhone}
	</update>

</mapper>